{
  "name": "mern-ts",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "16.13.0",
    "npm": "8.1.4"
  },
  "scripts": {
    "start": "tsc && node dist/server",
    "compile:ts": "tsc -w",
    "server": "nodemon dist/server",
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run compile:ts\" \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15"
  }
}
